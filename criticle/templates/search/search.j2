                        <li class="list-group-item"><a href="{{ url_for('profile.view_user_profile', username=username) }}">{{ username }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <ul class="list-group">
                    {% for title in input['profiles'] %}
                        <li class="list-group-item"><a href="{{ url_for('profile.view_media_profile', category=input['search_for'], title=title['title']) }}">{{ title }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %} #}
        </div>
    {% endif %}
{% endblock %}